@model IEnumerable<Book>
@{
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
    ViewBag.Title = "Welcome!";
}

<section id="showcase">
    <div class="header-overlay"></div>
    <div class="container">
        <h1 class="text-black" style="font-family: 'Economica', cursive;">Library Manager</h1>
    </div>
</section>

<ul id="carousel" class="elastislide-list">
    @{
        foreach (Book i in Model)
        {
            <li><a href="@Url.Action("book", "home", new { i.Id} )"><img src="@i.ImgSrc" alt="@i.Title" /></a></li>
        }
    }
</ul>

@section Styles{
    <link rel="stylesheet" href="~/Content/index.css">
    <link href="https://fonts.googleapis.com/css?family=Economica" rel="stylesheet">
}

@section Scripts{
    <script src="https://tympanus.net/Development/Elastislide/js/modernizr.custom.17475.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="https://tympanus.net/Development/Elastislide/js/jquerypp.custom.js"></script>
    <script type="text/javascript" src="https://tympanus.net/Development/Elastislide/js/jquery.elastislide.js"></script>
    <script type="text/javascript">
        $('#carousel'
        ).elastislide({
            minItems: 2
        });
    </script>
}
@model IEnumerable<LibraryManager.Book>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.Id)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Title)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Author)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Length)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.Length
            </td>
            <td>
                @Html.ActionLink("Details", "book", new { id = item.Id })
            </td>
        </tr>
    }

</table>
